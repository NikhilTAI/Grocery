<%- include('../_layouts/admin_header') %>

<div class="container-fluid">
    <!-- /.row -->
    <div class="white-box">
        <h4 class="box-title">Products of <%= vendor.storename %></h4>
    </div>
    <!-- errors -->
    <% if(typeof alert != 'undefined') { %>
        <div class="white-box">
            <div class="w-75 p-3" style="margin: auto;">
                <% alert.forEach(function(error) { %>
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <%= error.msg %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">Ã—</span>
                        </button>
                    </div>
                <% }) %>
            </div>
        </div>
    <% } %>
    <div class="w-75 p-3" style="margin: auto;">
        <%- messages('messages', locals) %>
    </div>
    <!-- /.row -->
    <div class="row">
        <% for( let i = 0; i < products.length; i++ ) { %>
            <div class="card col-md-4 col-sm-6 col-xs-12">
                <div class="white-box">
                    <div class="product-img">
                        <a href="/admin/product/detail/<%= products[i].id %>">
                            <img  src="<%= products[i].image %>" class="img-responsive" />
                        </a>
                    </div>
                    <div class="product-text">
                        <h3 class="box-title m-b-0"><%= products[i].productname %></h3>
                        <span class="pull-right">
                            <!-- <a href="/admin/product/edit/<%= products[i].id %>" class="btn btn-primary btn-circle"><i class="icon-pencil" style="font-size: 120%;"></i></a> -->
                            <a href="/admin/product/delete/<%= products[i].id %>" class="btn btn-danger btn-circle confirmDeletion"><i class="icon-trash" style="font-size: 120%;"></i></a>
                        </span>
                        <h6 class="m-b-0">&#8377; <%= products[i].totalprice %></h6>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>

<%- include('../_layouts/admin_footer') %>