<%-include('../_layouts/admin_header')-%>

            <div class="container-fluid">
                <!-- /row -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="white-box">
                            <a class="btn btn-primary pull-right" href="/admin/driver/add">Add Driver</a>
                            <h3 class="page-title"> Driver Details</h3>
                            <hr>
                            <!-- messages -->
                            <div class="w-75 p-3" style="margin: auto;">
                                <%- messages('messages', locals) %>
                            </div>
                            <div class="table-responsive">
                                <table id="myTable" class="table table-striped color-table primary-table">
                                    <thead>
                                        <tr>
                                            <th>Sr No.</th>
                                            <th>Driver Name</th>
                                            <th>Email</th>
                                            <th>Mobile No</th>
                                            <th>Image</th>
                                            <th>Bank Name</th>
                                            <th>Account Number</th>
                                            <th>IFSC code</th>
                                            <th>Vehicle Image</th>
                                            <th>License Front Side</th>
                                            <th>License Back Side</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for( let i = 0; i < drivers.length; i++ ) { %>
                                            <tr>
                                                <td><%= i+1 %></td>
                                                <td><%= drivers[i].name %></td>
                                                <td><%= drivers[i].email %></td>
                                                <td><%= drivers[i].number %></td>
                                                <td><img src="<%= drivers[i].image %>" alt="<%= drivers[i].name %>" width="100" height="100"></td>
                                                <td><%= drivers[i].Bankname %></td>
                                                <td><%= drivers[i].Accountnumber %></td>
                                                <td><%= drivers[i].IFSCcode %></td>
                                                <td><img src="<%= drivers[i].vehicleimage %>" alt="Vehicle Image" width="100" height="100"></td>
                                                <td><img src="<%= drivers[i].frontimage %>" alt="License Frontside" width="100" height="100"></td>
                                                <td><img src="<%= drivers[i].backimage %>" alt="License Backside" width="100" height="100"></td>
                                                <td>
                                                    <a href="/admin/driver/edit/<%= drivers[i].id %>"><i class="icon-pencil" style="font-size: 120%;"></i></a>
                                                    <a href="/admin/driver/delete/<%= drivers[i].id %>" class="confirmDeletion"><i class="icon-trash" style="font-size: 120%;"></i></a>
                                                </td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
