<div class="container-fluid">
    <div class="w-75 p-3" style="margin: auto;">
        <%- messages('messages', locals) %>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-wrapper collapse in" aria-expanded="true">
                    <div class="panel-body">
                        <form onsubmit="validate()" method="POST" action="/admin/commission/" id="Form">
                            <div class="form-body">
                                <h2 class="page-title m-b-20"> Commission</h2>
                                <hr>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">Commission (%)</label>
                                            <input type="text" id="name" class="form-control"  name="percent" placeholder="Commission percentage" value="<%= commission.percent %>" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');">
                                            <div class="txt-s-101 cl6 p-b-10" style="color: red;">
                                                <span class="cl12" id="ErrName"></span>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Update</button>
                                        <!-- <a href="/admin/unit" class="btn btn-danger" style="color: white;">Cancel</a> -->
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    const form = document.getElementById('Form');

    form.addEventListener('submit', (e) => {
        e.preventDefault();
    })
    function validate(){
        let returnVal = true;

        const nameValue = document.getElementById('name').value.trim();

        if (nameValue == '') {
            setError('ErrName','Please enter value.')
            returnVal = false;
        } else {
            removeError('ErrName')
        }
        
        if (returnVal) {
            form.submit();
        }
    }

    function setError(id, error) {
        // set error msg
        const element = document.getElementById(id);
        element.innerHTML = '* ' + error;
    }
    function removeError(id) {
        // remove error msg
        const element = document.getElementById(id);
        element.innerHTML = '';
    }
</script>
