						<div class="col-sm-6 col-md-4 col-lg-3 p-b-30">
							<div class="block1">
								<div class="block1-bg wrap-pic-w bo-all-1 bocl12 hov3 trans-04">
									<img src="<%= searchProds[i].image %>" class="product_img_set" alt="IMG" width="200px">

									<div class="block1-content flex-col-c-m p-b-46">
										<a href="product-single.html" class="txt-m-103 cl3 txt-center hov-cl10 trans-04 js-name-b1">
											<%= searchProds[i].productname %>
										</a>

										<span class="block1-content-more txt-m-104 cl9 p-t-21 trans-04">
											<%= searchProds[i].totalprice %>&#8377;
										</span>
										<div class="block1-wrap-icon flex-c-m flex-w trans-05">
											<a href="/products/detail/<%= searchProds[i].id %>" class="block1-icon flex-c-m wrap-pic-max-w">
												<img src="/images/icons/icon-view.png" alt="ICON">
											</a>
											<a href="/cart/add/<%= searchProds[i].id %>" class="block1-icon flex-c-m wrap-pic-max-w">
												<img src="/images/icons/icon-cart.png" alt="ICON">
											</a>
											<% if (user && user.wishlist.includes(prods[i].id)) { %>
												<a href="/wishlist/remove/<%= prods[i].id %>" class="block1-icon flex-c-m wrap-pic-max-w">
													<img class="icon-addedwish-b1" src="/images/icons/icon-heart2.png" alt="ICON">
												</a>
											<% } else { %>
												<a href="/wishlist/add/<%= prods[i].id %>" class="block1-icon flex-c-m wrap-pic-max-w">
													<img class="icon-addwish-b1" src="/images/icons/icon-heart.png" alt="ICON">
												</a>
											<% } %>
										</div>
									</div>
								</div>
							</div>
						</div>
					<% } %>
				</div>
